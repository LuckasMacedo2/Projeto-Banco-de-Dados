CREATE TABLE AlunoErro (
	matErro int,
	nome text,
	turnoErro varchar(20),
    periodo decimal(20),
    optativaErro varchar(30),
    curso text
);

ALTER TABLE AlunoErro RENAME TO Alunos;

ALTER TABLE Alunos ADD notas float;

ALTER TABLE Alunos ADD nomeDaMae text;

ALTER TABLE Alunos DROP notas;

ALTER TABLE Alunos DROP nomeDaMae;

ALTER TABLE Alunos ALTER COLUMN matErro TYPE decimal(5);

ALTER TABLE Alunos ALTER COLUMN matErro TYPE decimal(15);

ALTER TABLE Alunos RENAME matErro TO mat;

ALTER TABLE Alunos RENAME turnoErro TO turno;

ALTER TABLE Alunos ALTER COLUMN turno TYPE text;

ALTER TABLE Alunos RENAME optativaErro TO optativa;

SELECT * FROM Alunos;

ALTER TABLE Alunos ALTER COLUMN mat TYPE decimal(15);


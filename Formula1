CREATE TABLE Pilotos (
	codigo int,
    nome text,
    pais varchar(30),
    idade smallint,
    equipe varchar(30),
    motor varchar(15)
)


INSERT INTO Pilotos
VALUES 	(1234,'Tsuna', 'Italia',27,'Vongola','Bom pra nada');


